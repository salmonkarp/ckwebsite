<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <!-- <link rel="stylesheet" href="../styles/main.css" /> -->
    <link rel="stylesheet" href="../styles/orderDashboard.css" />
    <title>Order Dashboard</title>
  </head>
  <body>
    <!-- Header -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto px-3">
          <li class="nav-item active">
            <a href="/orderDashboard" class="nav-link">Home</a>
          </li>
          <li class="nav-item">
            <a href="/products" class="nav-link">Products</a>
          </li>
          <li class="nav-item">
            <a href="/hampers" class="nav-link">Hampers</a>
          </li>
          <li class="nav-item">
            <a href="/customers" class="nav-link">Customers</a>
          </li>
        </ul>
      </div>
      <button class="btn btn-dark mx-3" onclick="logout()">Logout</button>
    </nav>

    <!-- Order Container -->
    <div class="container mt-5">
      <% slicedData.forEach(order => { %>
      <div class="accordion" id="accordionExample">
        <div class="accordion-item">
          <h2 class="accordion-header" id="headingOne">
            <button
              class="accordion-button"
              type="button"
              data-bs-toggle="collapse"
              data-bs-target="#collapseOne"
              aria-expanded="true"
              aria-controls="collapseOne"
            >
              Order by <%= order.customerName%> due on <%= order.deliveryDate %>
            </button>
          </h2>
          <div
            id="collapseOne"
            class="accordion-collapse collapse show"
            aria-labelledby="headingOne"
            data-bs-parent="#accordionExample"
          >
            <div class="accordion-body">
              This is the first item's accordion body.
            </div>
          </div>
        </div>
      </div>
      <% }) %>
    </div>

    <!-- Page Selector -->
    <div class="container mx-auto mt-3">
      <nav aria-label="Page navigation" class="mx-auto">
        <ul class="pagination">
          <% if(page > 1) { %>
          <li class="page-item"><a class="page-link" href="?page=<%= page-1 %>">Previous</a></li>
          <% } %>
          <% for(let i=0; i<totalPages; i++) { %>
          <li class="page-item"><a class="page-link" href="?page=<%= i+1 %>"><%= i+1 %></a></li>
          <% } %>
          <% if(page < totalPages) { %>
          <li class="page-item"><a class="page-link" href="?page=<%= page+1 %>">Next</a></li>
          <% } %>
        </ul>
      </nav>
    </div>
    


  </body>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"
  ></script>
</html>
